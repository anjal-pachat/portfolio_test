<h1>Create a new Portfolio item</h1>




<%= form_for(@portfolio_item) do |f| %>
  <div class="field">
    <%= f.label :title %>
    <%= f.text_field :title %>
  </div>
  <div class="field">
    <%= f.label :subtitile %>
    <%= f.text_field :subtitile %>
  </div>
  <div class="field">
    <%= f.label :body %>
    <%= f.text_area :body %>
  </div>
  <ul>
      <%= f.fields_for :technologies do |technologies_form| %>
    <li>
      <%=technologies_form.label :name%>
      <%=technologies_form.text_field :name%>
    </li>
    <%end%>
  </ul>

  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
