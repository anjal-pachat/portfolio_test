<body>
<h1>Change your password</h2>
<div class="w3ls-login box box--big">
    <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>
      <%= f.hidden_field :reset_password_token %>

      <div class="agile-field-txt">
        <% if @minimum_password_length %>
      <label> <i class="fa fa-user" aria-hidden="true"></label></i><%= f.label :password, "New password" %> <em>(<%= @minimum_password_length %> characters minimum)</em><br />
      <% end %>
       <%= f.password_field :password, autofocus: true, autocomplete: "new-password" %>
      </div>

        <div class="agile-field-txt">
        <label> <i class="fa fa-user" aria-hidden="true"></label></i><%= f.label :password_confirmation, "Confirm new password" %><br />
         <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
       </div>

        
         <%= f.submit "Change my password" %>
        
        <% end %>

      </div>
      <%= render "devise/shared/links" %>
</body>